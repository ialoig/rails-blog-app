<div id="post_show_content" class="skinny_wrapper wrapper_padding">
	<header>
		<p class="date"><%= @post.created_at.strftime("%A, %B %d") %></p>
		<h1><%= @post.title%></h1>
		<hr>
	</header>

	<div id="content">
		<%= markdown @post.content %>
	</div>
	<hr>
	<div id="share_box">
		<p>Share the article</p>
		<a href="#"><i class="fa fa-facebook-square" aria-hidden="true"></i></a>
		<a href="#"><i class="fa fa-twitter" aria-hidden="true"></i></a>
	</div>
	<hr>

	<%= render 'disqus' %>
</div>
<br>
<br>

<%= link_to "Edit", edit_post_path(@post) %><br>
<%= link_to "Delete", posts_path(@post), method: :delete, data: { confirm: "Are you sure you want to delete this post?"} %>